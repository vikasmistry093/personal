<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<property name="hibernate.connection.url">jdbc:oracle:thin:@127.0.0.1:1521</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">create</property>


		<mapping class="model.Address" />
		<mapping class="model.Card" />
		<mapping class="model.Category" />
		<mapping class="model.Image" />
		<mapping class="model.Order" />
		<mapping class="model.Payment" />
		<mapping class="model.Product" />
		<mapping class="model.Purchase" />
		<mapping class="model.Recommendation" />
		<mapping class="model.User" />
		<mapping class="model.WishList" />
	</session-factory>
</hibernate-configuration>
